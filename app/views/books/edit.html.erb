<h1>Editing Book</h1>
<% if @book.errors.any? %>
    <%= @book.errors.full_messages.each do |message| %>
    <%= @book.errors.count %>errorがあります
    <%= message %>
    <% end %>
<% end %>
<%= form_with model:@book,local:true do |f| %>
  <div>
  <%= f.label :Title %>
  <%= f.text_field :title %>
  </div>
  <div>
  <%= f.label :Body %>
  <%= f.text_area :body %>
  </div>
  <%= f.submit"Update Book" %>
<% end %>
<%= link_to "Show",book_path(@book) %>
<%= link_to "Back",books_path %>